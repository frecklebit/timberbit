<!--[if gt IE 8]><!-->
<html class="no-js" {{site.language_attributes}}>
<!--<![endif]-->
  <head>
    <meta charset="{{site.charset}}">
    <title>{{wp_title}}</title>
    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset={{site.charset}}" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{site.pingback_url}}">

    {{fn('wp_head')}}
  </head>
  <body class="{{body_class}}" data-template="base.twig">

    {% do action( 'timberpress_after_opening_body' ) %}
    {% do action( 'timberpress_layout_start' ) %}

    <header id="masthead" class="site-header" role="banner">
      {% do action( 'timberpress_before_header' ) %}

      {% block header %}
        {% include 'header.twig' %}
      {% endblock %}

      {% do action( 'timberpress_after_header' ) %}
    </header>

    <section class="container" role="main">
      {% do action( 'timberpress_before_content' ) %}

      <div class="content">
        {% block content %}
          Sorry, no content.
        {% endblock %}
      </div>

      {% if left_sidebar_widgets %}
        <aside class="left sidebar">
          {% do action( 'timberpress_before_left_sidebar' ) %}
          {{left_sidebar_widgets}}
          {% do action( 'timberpress_after_left_sidebar' ) %}
        </aside>
      {% endif %}

      {% if right_sidebar_widgets %}
        <aside class="right sidebar">
          {% do action( 'timberpress_before_right_sidebar' ) %}
          {{right_sidebar_widgets}}
          {% do action( 'timberpress_after_right_sidebar' ) %}
        </aside>
      {% endif %}

      {% do action( 'timberpress_after_content' ) %}
    </section>

    <footer id="footer" class="site-footer" role="contentinfo">
      {% do action( 'timberpress_before_footer' ) %}

      {% block footer %}
        {% if footer_widgets %}
          {{footer_widgets}}
        {% else %}
          {% include 'footer.twig' %}
        {% endif %}
      {% endblock %}

      {% do action( 'timberpress_after_footer' ) %}
    </footer>

    {% do action( 'timberpress_layout_end' ) %}
    {{ function( 'wp_footer' ) }}
    {% do action( 'timberpress_before_closing_body' ) %}
  </body>
</html>

{% if trail|length > 0 %}
<nav aria-label="You are here:" role="navigation">
  <ul id="{{ container_id }}" class="{{ container_class }}">
    {% for crumb in trail %}

      {# Crumb #}
      <li class="{{crumb.class}}">
        {% if not crumb.current %}
          <a href="{{crumb.link}}" title="{{crumb.title}}">
            {{crumb.title}}
          </a>
        {% else %}
          <span class="show-for-sr">Current: </span>
          {{crumb.title}}
        {% endif %}
      </li>

      {# Separator #}
      {% if crumb.separator and not crumb.current %}
        <li class="separator">{{ crumb.separator }}</li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>
{% endif %}
